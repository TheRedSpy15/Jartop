<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #efdecd;" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0">
         <image>
            <Image url="@wallpapericon.jpg" />
         </image>
         <effect>
            <BoxBlur iterations="3" />
         </effect>
      </ImageView>
      <ImageView fitHeight="233.0" fitWidth="226.0" layoutX="527.0" layoutY="14.0" preserveRatio="true">
         <image>
            <Image url="@javaicon.png.png" />
         </image>
      </ImageView>
      <Label layoutX="558.0" layoutY="295.0" prefHeight="65.0" prefWidth="165.0" text="Jartop" textFill="WHITE">
         <font>
            <Font name="Tahoma Bold" size="51.0" />
         </font>
      </Label>
      <JFXButton fx:id="selectBtn" focusTraversable="false" layoutX="14.0" layoutY="655.0" onAction="#select" prefHeight="51.0" prefWidth="148.0" text="Select User" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="21.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="loginBtn" focusTraversable="false" layoutX="566.0" layoutY="523.0" onAction="#login" prefHeight="51.0" prefWidth="148.0" text="LoginController" textFill="WHITE">
         <font>
            <Font name="Tahoma Bold" size="31.0" />
         </font>
      </JFXButton>
      <Label fx:id="userLbl" layoutX="14.0" layoutY="14.0" prefHeight="39.0" text="Selected User: none" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="18.0" />
         </font>
      </Label>
      <JFXButton fx:id="guestBtn" focusTraversable="false" layoutX="1118.0" layoutY="655.0" onAction="#guest" prefHeight="51.0" prefWidth="148.0" text="Guest LoginController" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="20.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="newBtn" focusTraversable="false" layoutX="175.0" layoutY="655.0" onAction="#newUser" prefHeight="51.0" prefWidth="148.0" text="New User" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="20.0" />
         </font>
      </JFXButton>
      <JFXToggleButton fx:id="load256Toggle" focusTraversable="false" layoutX="554.0" layoutY="375.0" text="AES-256" toggleColor="#a84040">
         <font>
            <Font name="Tahoma" size="23.0" />
         </font>
      </JFXToggleButton>
      <Label fx:id="defaultLbl" layoutX="528.0" layoutY="584.0" prefHeight="39.0" text="Default password: password" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="18.0" />
         </font>
      </Label>
      <JFXButton fx:id="copyBtn" focusTraversable="false" layoutX="619.0" layoutY="623.0" onAction="#copy" text="Copy" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="12.0" />
         </font>
      </JFXButton>
      <JFXPasswordField fx:id="passwordField" focusColor="WHITE" focusTraversable="false" labelFloat="true" layoutX="502.0" layoutY="472.0" onAction="#login" prefHeight="39.0" prefWidth="278.0" promptText="Password" unFocusColor="WHITE">
         <font>
            <Font name="Tahoma" size="24.0" />
         </font>
      </JFXPasswordField>
      <JFXButton fx:id="exitBtn" focusTraversable="false" layoutX="1192.0" layoutY="14.0" onAction="#exit" prefHeight="39.0" prefWidth="76.0" text="Exit" textFill="WHITE">
         <font>
            <Font name="Tahoma" size="20.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
